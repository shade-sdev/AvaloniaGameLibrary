<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="GameLibraryUI.App"
             xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             xmlns:gameLibraryUi="clr-namespace:GameLibraryUI"
             RequestedThemeVariant="Default">

    <Application.DataTemplates>
        <gameLibraryUi:ViewLocator />
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme />
        <avalonia:MaterialIconStyles />
    </Application.Styles>

    <Application.Resources>
        <FontFamily x:Key="RussoOne">avares://GameLibraryUI/Assets/Fonts#Russo One</FontFamily>
        <FontFamily x:Key="Poppins">avares://GameLibraryUI/Assets/Fonts#Poppins</FontFamily>
    </Application.Resources>

</Application>